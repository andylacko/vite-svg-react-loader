{
  "files": ["index.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNEXT",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  }
}
